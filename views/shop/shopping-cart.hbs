{{# if products}}
<h2>Welcome to your cart</h2>
<br>
<div class="row">
        <div class="col-sm-8 col-md-8 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products}}
                <li class="list-group-item">
                    <span class="badge badge-pill badge-dark pull-right">
                        <a href="/add/{{this.item._id}}"><i class="fa fa-caret-up"></i></a>
                        {{ this.qty }}
                        <a href="/reduce/{{this.item._id}}"><i class="fa fa-caret-down"></i></a>
                        </span>
                    <strong>{{ this.item.title }}</strong>
                    <span class="badge badge-pill badge-success" style="float:right;margin-right:5em">${{ this.price }}</span>
                </li>
                {{/each}}
            </ul>
</div></div>
<hr>
<div class="row">
        <div class="col-sm-8 col-md-8 col-md-offset-3 col-sm-offset-3">
            <strong>Cart Total: ${{ totalPrice }}</strong>
    </div></div>
<hr>
<div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
<hr>
{{ else }}
<div class="row">
        <div class="col-sm-8 col-md-8 col-md-offset-3 col-sm-offset-3">
            <h2>No items in cart.</h2>
    </div></div>
{{/if}}
